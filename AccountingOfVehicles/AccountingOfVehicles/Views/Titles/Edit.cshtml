@model AccountingOfVehicles.Models.Title
@{
    ViewData["Title"] = "Звание сотрудника ГАИ";
}

<h2>Редактирование</h2>
<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Звание сотрудника ГАИ</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TitleID" />
        
        <div class="form-group">
            <label asp-for="TitleName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TitleName" class="form-control" />
                <span asp-validation-for="TitleName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="TitleAllowance" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TitleAllowance" class="form-control" />
                <span asp-validation-for="TitleAllowance" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="TitleCharge" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TitleCharge" class="form-control" />
                <span asp-validation-for="TitleCharge" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="TitleRequirement" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TitleRequirement" class="form-control" />
                <span asp-validation-for="TitleRequirement" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-warning" />
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Titles" class="btn btn-sm btn-primary">Вернуться</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/lib/jquery-ui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    
}
