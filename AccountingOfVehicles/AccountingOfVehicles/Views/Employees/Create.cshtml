@model AccountingOfVehicles.Models.Employee
@{
    ViewData["Title"] = "Сотрудник ГАИ";

}
<h2>Создать</h2>
<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Сотрудник ГАИ</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title.TitleName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="TitleID" class="form-control" asp-items="ViewBag.TitleID"></select>
                <span asp-validation-for="TitleID" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="EmployeeName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="EmployeeBirthDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmployeeBirthDate" class="form-control" />
                <span asp-validation-for="EmployeeBirthDate" class="text-danger"></span>
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-warning" />
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Employees" class="btn btn-sm btn-primary">Вернуться</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/lib/jquery-ui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/jquery-ui/ui/i18n/datepicker-ru.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#EmployeeBirthDate").datepicker({ dateFormat: "dd/mm/yy" });
        });
    </script>
}
